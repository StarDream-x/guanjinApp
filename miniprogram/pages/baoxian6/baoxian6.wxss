.nav-tab {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    background-color: #fff;
    margin-bottom: 10rpx;
    display: flex;
    justify-content: space-around;
  }
  
  .nav-tab .item {
    border-bottom: 6rpx solid transparent;
  }
  
  .nav-tab .item.active {
    border-bottom: 6rpx solid #f00;
  }
  
  .content {

    padding: 20rpx;
  }
  